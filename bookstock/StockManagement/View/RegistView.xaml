<Window x:Class="StockManagement.View.RegistView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StockManagement.View"
        mc:Ignorable="d"
        xmlns:helpers="clr-namespace:StockManagement.Helpers"

        Title="회원가입" Height="224" Width="348" MaxHeight="224" MaxWidth="424">
    <Grid HorizontalAlignment="Center" Width="348">
        <Label Content="Email" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top"/>
        <Label Content="이름" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>
        <Label Content="비밀번호" HorizontalAlignment="Left" Margin="10,89,0,0" VerticalAlignment="Top"/>
        <Label Content="비밀번호 확인" HorizontalAlignment="Left" Margin="10,119,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="127,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="{Binding EmailReadOnly}"/>
        <TextBox HorizontalAlignment="Left" Margin="127,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Name}"/>
        <PasswordBox HorizontalAlignment="Left" Margin="127,97,0,0"  VerticalAlignment="Top" Width="120" helpers:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}" />
        <PasswordBox HorizontalAlignment="Left" Margin="127,127,0,0" VerticalAlignment="Top" Width="120" helpers:PasswordBoxHelper.BoundPassword="{Binding CheckPassword, Mode=TwoWay}" />
        <Button Content="중복 체크" HorizontalAlignment="Left" Margin="271,36,0,0" VerticalAlignment="Top" Command="{Binding DupEmailCommand}"/>
        <Button Content="회원가입" HorizontalAlignment="Center" Margin="0,169,0,0" VerticalAlignment="Top" Command="{Binding RegistCommand}" Width="94"/>

    </Grid>
</Window>
